<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <a href="/items/add" class="btn btn-success pull-right">Add Item</a>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Price</th>
                        <th>Published</th>
                        <th></th> <!-- Empty header for the "Remove" column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{title}}</td>
                            <td>{{#formatDate itemDate}}{{/formatDate}}</td>
                            <td>{{price}}</td>
                            <td>{{published}}</td>
                            <td>
                                <a href="/items/delete/{{id}}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{#unless items}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>
